<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilan1"
    android:background="@drawable/gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <TextView
            android:id="@+id/toolbartitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Hero"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/font"
            />
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:maxWidth="1000dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/serene" />

    <ImageView
        android:id="@+id/logohero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="248dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hero1"
        />

    <TextView
        android:id="@+id/titlehero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LING"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/font"
        android:textSize="20sp"
        android:layout_marginTop="262dp"
        android:layout_marginLeft="115dp"
        />
    <TextView
        android:id="@+id/rolehero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASSASIN"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/font"
        android:textSize="14sp"
        android:layout_marginTop="292dp"
        android:layout_marginLeft="115dp"
        />

    <LinearLayout
        android:id="@+id/hargahero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logohero"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/bp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/bpoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="32000"
                android:textAlignment="viewStart"
                android:paddingHorizontal="3dp"
                android:textColor="@color/font"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/dm"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/dm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="599"
                android:textAlignment="viewStart"
                android:paddingHorizontal="3dp"
                android:textColor="@color/font"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/tikett"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="0"
                android:textAlignment="viewStart"
                android:paddingHorizontal="3dp"
                android:textColor="@color/font"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/hargahero"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Tier"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />

        <ImageView
            android:id="@+id/tierhero"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hero1"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/desktier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="15sp"
            android:textColor="@color/font"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/des"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Lane"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            android:textColor="@color/font"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            >

            <ImageView
                android:id="@+id/heroLane"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hero1"
                android:layout_marginLeft="30dp"/>


            <TextView
                android:id="@+id/titleherolane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jungle"
                android:fontFamily="@font/poppinsbold"
                android:textSize="18sp"
                android:textColor="@color/font"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/deskherolane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="15sp"
            android:textColor="@color/font"/>
    </LinearLayout>




</RelativeLayout>