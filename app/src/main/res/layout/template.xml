<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:id="@+id/buff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buff"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:textColor="@color/font"
            android:text="@string/buff"
            android:textAlignment="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppinsbold"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nerf"
        android:layout_below="@id/buff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nerf"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:textColor="@color/font"
            android:text="@string/nerf"
            android:textAlignment="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/poppinsbold"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/penyesuaian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/penyesuaian"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nerf"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textColor="@color/font"
            android:text="@string/penyesuaian"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/poppinsbold"

            />
    </LinearLayout>

</RelativeLayout>