<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kalkulator"
    android:background="@drawable/gradient">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/titkalkulator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator Mobile Legends"
        android:fontFamily="@font/poppinsbold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:textColor="@color/font" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titkalkulator"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/win"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:text="Win Rate Dengan Win Streak"
            android:drawableStart="@drawable/win"
            android:background="@drawable/btn2"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/font"
            android:textAlignment="viewStart"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/lose"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:text="Win Rate Dengan Lose Streak"
            android:drawableStart="@drawable/lose"
            android:background="@drawable/btn2"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/font"
            android:textAlignment="viewStart"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/mgcw"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:text="Magic Wheel"
            android:drawableStart="@drawable/magic"
            android:background="@drawable/btn2"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/font"
            android:textAlignment="viewStart"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/zdc"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:text="Zodiac"
            android:drawableStart="@drawable/zodiac"
            android:background="@drawable/btn2"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/font"
            android:textAlignment="viewStart"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/totalmatchh"
            android:layout_width="375dp"
            android:layout_height="40dp"
            android:text="Cek Total Match Win Lose"
            android:drawableStart="@drawable/almatch"
            android:background="@drawable/btn2"
            android:layout_marginBottom="20dp"
            android:textColor="@color/font"
            android:textAlignment="viewStart"
            android:paddingStart="20dp"
            android:drawablePadding="20dp"
            android:fontFamily="@font/poppinsbold"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>